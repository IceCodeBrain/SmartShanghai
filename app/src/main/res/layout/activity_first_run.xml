<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartshanghaiapp.smartshanghaicompany.smartshanghai.FirstRunActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/myViewPagerFirstRun"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_first_run_indacator1"
            android:layout_width="@dimen/size_indicator_first_run"
            android:layout_height="@dimen/size_indicator_first_run"
            android:layout_margin="@dimen/margin_indicator_first_run"
            android:src="@drawable/ic_dots_blue" />

        <ImageView
            android:id="@+id/iv_first_run_indacator2"
            android:layout_width="@dimen/size_indicator_first_run"
            android:layout_height="@dimen/size_indicator_first_run"
            android:layout_margin="@dimen/margin_indicator_first_run"
            android:src="@drawable/ic_dots_white" />

        <ImageView
            android:id="@+id/iv_first_run_indacator3"
            android:layout_width="@dimen/size_indicator_first_run"
            android:layout_height="@dimen/size_indicator_first_run"
            android:layout_margin="@dimen/margin_indicator_first_run"
            android:src="@drawable/ic_dots_white" />

        <ImageView
            android:id="@+id/iv_first_run_indacator4"
            android:layout_width="@dimen/size_indicator_first_run"
            android:layout_height="@dimen/size_indicator_first_run"
            android:layout_margin="@dimen/margin_indicator_first_run"
            android:src="@drawable/ic_dots_white" />


    </LinearLayout>


</RelativeLayout>
