<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyFeedFragment"
    tools:context=".MainPage.FragmentFeed">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/load_frag_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorSmartShanghaiBlue" />


        <ListView
            android:id="@+id/lv_frag_feed_feedlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGreyFeedFragment"
            android:divider="@android:color/transparent"
            android:dividerHeight="15dp"
            android:padding="10dp"
            android:clipToPadding="false"
            android:scrollbars="none">

        </ListView>


        <RelativeLayout
            android:id="@+id/rl_frag_feed_loading"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:background="@color/blackTransparent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorSmartShanghaiBlue" />

        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>
