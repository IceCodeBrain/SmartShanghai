<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/dv_custom_list_of_events_art_exhibition_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBlackPrice" />

            <TextView
                android:padding="5dp"
                android:id="@+id/tv_custom_list_of_events_art_exhibition_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorSmartShanghaiBlue"
                android:text="Date"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_custom_list_of_events_art_exhibition_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:text="Title"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_custom_list_of_events_art_exhibition_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:text="description description description description description descriptiondescription description description"
            android:textSize="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_custom_list_of_events_art_exhibition_venue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Venue name"
                android:textColor="@color/colorSmartShanghaiBlue"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_custom_list_of_events_art_exhibition_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:text="3.4 m"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_custom_list_of_events_art_exhibition_distance"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_custom_list_of_events_art_exhibition_distance" />


        </RelativeLayout>

    </LinearLayout>



</LinearLayout>