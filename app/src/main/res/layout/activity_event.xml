<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.smartshanghaiapp.smartshanghaicompany.smartshanghai.EventActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_event_activity_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@android:color/black"
                    android:cropToPadding="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_event_page_activity_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_venue_act_share" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#C0C0C0" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_event_page_activity_report"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_venue_act_report" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Report"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_event_page_activity_add_favorites"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_event_page_activity_add_favorites"
                            android:layout_width="@dimen/venue_act_size_iv_fav"
                            android:layout_height="@dimen/venue_act_size_iv_fav"
                            android:src="@drawable/ic_vanue_act_add_favorites" />

                        <TextView
                            android:id="@+id/tv_venue_page_activity_favorites"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Favorite"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#C0C0C0" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">


                <TextView
                    android:id="@+id/tv_event_activity_title_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="Title event"
                    android:textColor="@android:color/black"
                    android:textSize="30dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_event_activity_venue_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="database needed"
                        android:textColor="#01A7E0"
                        android:textSize="22dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iv_event_activity_image_address"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top"
                        android:layout_marginRight="10dp"
                        android:cropToPadding="true"
                        android:src="@drawable/ic_event_page_location" />

                    <TextView
                        android:id="@+id/tv_event_activity_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="database needed"
                        android:textIsSelectable="true"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iv_event_activity_image_date_and_hour"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:cropToPadding="true"
                        android:src="@drawable/ic_event_page_time" />

                    <TextView
                        android:id="@+id/tv_event_activity_date_and_hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Date and hour"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_event_activity_image_buy_tickets"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:cropToPadding="true"
                    android:src="@drawable/buytickets" />

                <RelativeLayout
                    android:id="@+id/rl_event_activity_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/sep_event_activity_grey_separator"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/ll_choose_frag_bar"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/darker_gray" />


                        <LinearLayout
                            android:id="@+id/ll_event_activity_phone"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/iv_event_activity_image_phone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="15dp"
                                android:cropToPadding="true"
                                android:src="@drawable/ic_event_page_phone" />

                            <TextView
                                android:id="@+id/tv_event_activity_phone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="02 33 65 51 48"
                                android:textColor="@android:color/black"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <View
                            android:id="@+id/sep_event_activity_grey_separator2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/ll_choose_frag_bar"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="EVENT DESCRIPTION"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_event_activity_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:autoLink="web"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginTop="15dp"
                    android:text="description description description descriptiondescriptionv description "
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/colorGreyFeedFragment"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADVERTISEMENT"
                    android:textColor="@android:color/darker_gray"/>


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_event_activity_ad"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    fresco:actualImageScaleType="fitCenter"
                    android:cropToPadding="true" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>
