<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#F6F6F6"
    tools:context="com.smartshanghaiapp.smartshanghaicompany.smartshanghai.ReviewingVenueActivity3">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_review_image"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorgreenReviewFeed"
        android:text="Review Successfully Submitted"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorGreyPrice"
        android:text="Our admins are now reviewing your submission and will publish it shortly."/>

    <Button
        android:id="@+id/but_reviewing_venue_activity_finish_3"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:background="#C1C1C1"
        android:text="FINISH"/>

</LinearLayout>
